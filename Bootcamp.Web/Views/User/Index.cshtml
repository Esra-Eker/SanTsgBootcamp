@model List<Bootcamp.Domain.Users.User>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Kullanıcılar</h1>

<table id="kullaniciListesi">
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>Mail Adresi</th>
            <th>Kayıt Tarihi</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.EmailAddress</td>
                    <td>@(((DateTime)user.CreateDate).ToString("dd-MMMM-yyyy"))</td>
                    <td>
                        <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">Düzenle</a>
                    </td>
                    <td>
                        <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id">Sil</a>
                    </td>
                </tr>
            }
    </tbody>
</table>
